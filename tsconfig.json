{
	"compilerOptions": {
		"declaration": true,
		"target": "es6",
    "pretty": true,
		"module": "umd",
		"moduleResolution": "node",
		"sourceMap": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"typeRoots": [
			"./node_modules/@types/"
		]
  },
	"exclude": [
		"node_modules/*",
		"dist/*"
	]
}